@using CodingTracker.Models.DTOs
@model ProjectSessionDTO
<h2 class="text-secondary">Project Session form </h2>

<form asp-controller="ProjectSession" asp-action="Create" method="post">
    <label  asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" />

    <div class="mt-3" style="display: flex; align-items: center;">
        <label asp-for="Hours" style="margin-right: 5px;">Duration:</label>
        <input asp-for="Hours" type="number" id="hours" value="0" min="0" style="width: 40px; text-align: center;" placeholder="HH" />
        <span style="margin: 0 5px;">Hours :</span>
        <input asp-for="Minutes" type="number" id="minutes" value="0" min="0" max="59" style="width: 40px; text-align: center;" placeholder="MM" />
        <span style="margin: 0 5px;">Minutes</span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>